---
// src/components/common/Footer/index.astro
import { t, type Locale } from '../../../i18n/i18n';
import { logos } from '../../../config/assets';
import './styles.css';
import Skeleton from './Skeleton.astro';
import LazyImage from '../LazyImage.astro';

export interface Props {
  currentLang: Locale;
  loading?: boolean;
}

const { currentLang, loading = false } = Astro.props;

// Obtener textos del footer desde los archivos de traducción
const mainText = t('footer.main_text', { namespace: 'common', locale: currentLang });
const description = t('footer.description', { namespace: 'common', locale: currentLang });
const followUs = t('footer.follow_us', { namespace: 'common', locale: currentLang });
const contactUs = t('footer.contact_us', { namespace: 'common', locale: currentLang });
const choose = t('footer.choose', { namespace: 'common', locale: currentLang });
const instagramText = t('footer.instagram_text', { namespace: 'common', locale: currentLang });
const facebookText = t('footer.facebook_text', { namespace: 'common', locale: currentLang });
const email = t('footer.email', { namespace: 'common', locale: currentLang });
const copyrightText = t('footer.copyright', { namespace: 'common', locale: currentLang });
const ranchitas = t('footer.ranchitas', { namespace: 'common', locale: currentLang });
const help = t('footer.help', { namespace: 'common', locale: currentLang });
const tiktokText = t('footer.tiktok_text', { namespace: 'common', locale: currentLang });
const socialMedia = t('social_media', { namespace: 'common', locale: currentLang }) as any;
const menuItems = t('menu_items', { namespace: 'common', locale: currentLang }) as any[];
const mainText2 = t('footer.main_text2', { namespace: 'common', locale: currentLang });
const emailPlaceholder = t('footer.email_placeholder', { namespace: 'common', locale: currentLang });
const subscribeButton = t('footer.subscribe_button', { namespace: 'common', locale: currentLang });

function getMenuHref(id: string) {
  return (menuItems || []).find((i: any) => i?.id === id)?.href;
}

const footerMenuItems = (menuItems || []).filter((i: any) => i && i.id !== 'brand');

// Textos para el nuevo footer
const exploreText = currentLang === 'es' ? 'Explorar' : 'Explore';
const productsText = currentLang === 'es' ? 'Productos' : 'Products';
const recipesText = currentLang === 'es' ? 'Recetas' : 'Recipes';
const blogText = 'Blog';
const termsText = currentLang === 'es' ? 'Términos y condiciones' : 'Terms and conditions';
const privacyText = currentLang === 'es' ? 'Política de privacidad' : 'Privacy policy';
const currentYear = new Date().getFullYear();
---

{loading ? (
  <Skeleton />
) : (
  <div class="pt-12 pb-12 pr-6 pl-6">
    <footer class="bg-[#1a1a1a] text-white relative overflow-hidden rounded-[40px]">
      <div class="container mx-auto px-6 lg:px-12 py-12">
        
        <!-- Sección Superior -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-center mb-12">
          
          <!-- Logo -->
          <div class="flex justify-center lg:justify-start">
            <a href={`/${currentLang}`} class="inline-block">
              <img 
                src="/images/es/logo-footer.png" 
                alt="Yummi Pops" 
                class="h-16 md:h-20 w-auto"
              />
            </a>
          </div>

          <!-- Navegación Central -->
          <div class="text-center">
            <h3 class="text-lg font-bold mb-4 uppercase tracking-wide">
              {exploreText}
            </h3>
            <nav class="flex flex-wrap justify-center gap-6 md:gap-8">
              <a 
                href={`/${currentLang}/${currentLang === 'es' ? 'productos' : 'products'}`}
                class="text-base font-semibold hover:text-gray-300 transition-colors"
              >
                {productsText}
              </a>
              <a 
                href={`/${currentLang}/${currentLang === 'es' ? 'recetas' : 'recipes'}`}
                class="text-base font-semibold hover:text-gray-300 transition-colors"
              >
                {recipesText}
              </a>
              <a 
                href={`/${currentLang}/blog`}
                class="text-base font-semibold hover:text-gray-300 transition-colors"
              >
                {blogText}
              </a>
              <a 
                href={`/${currentLang}/${currentLang === 'es' ? 'contacto' : 'contact'}`}
                class="text-base font-semibold hover:text-gray-300 transition-colors"
              >
                {contactUs}
              </a>
            </nav>
          </div>

          <!-- Redes Sociales -->
          <div class="flex justify-center lg:justify-end gap-4">
            <a 
              href={socialMedia?.instagram?.url || '#'} 
              target="_blank" 
              rel="noopener noreferrer"
              class="w-10 h-10 flex items-center justify-center hover:opacity-70 transition-opacity"
              aria-label="Instagram"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
            <a 
              href={socialMedia?.facebook?.url || '#'} 
              target="_blank" 
              rel="noopener noreferrer"
              class="w-10 h-10 flex items-center justify-center hover:opacity-70 transition-opacity"
              aria-label="Facebook"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a 
              href={socialMedia?.tiktok?.url || '#'} 
              target="_blank" 
              rel="noopener noreferrer"
              class="w-10 h-10 flex items-center justify-center hover:opacity-70 transition-opacity"
              aria-label="TikTok"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
              </svg>
            </a>
            <a 
              href={socialMedia?.youtube?.url || '#'} 
              target="_blank" 
              rel="noopener noreferrer"
              class="w-10 h-10 flex items-center justify-center hover:opacity-70 transition-opacity"
              aria-label="YouTube"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </a>
          </div>

        </div>

        <!-- Línea divisoria -->
        <div class="border-t border-gray-700 mb-8"></div>

        <!-- Sección Inferior -->
        <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-gray-400">
          
          <!-- Links legales -->
          <div class="flex flex-wrap justify-center md:justify-start gap-6">
            <a 
              href={`/${currentLang}/${currentLang === 'es' ? 'terminos' : 'terms'}`}
              class="hover:text-white transition-colors"
            >
              {termsText}
            </a>
            <a 
              href={`/${currentLang}/${currentLang === 'es' ? 'privacidad' : 'privacy'}`}
              class="hover:text-white transition-colors"
            >
              {privacyText}
            </a>
          </div>

          <!-- Copyright -->
          <div class="text-center md:text-right">
            <p>© {currentYear}. Yummi Pops</p>
          </div>

        </div>

      </div>
    </footer>
  </div>
)}