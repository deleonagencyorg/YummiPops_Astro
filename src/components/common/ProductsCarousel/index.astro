---
// Componente de productos sin carousel
interface Product {
  id: string;
  slug: string;
  name: string;
  description: string;
  short_description: string;
  image: string;
  imagetwo?: string;  // Segunda imagen (derecha)
  imagethree?: string; // Tercera imagen (izquierda)
  imageMobile?: string;
  background_color?: string;
  text_color?: string;
  badge_icon?: string; // Icono/badge del producto (ej: "NUNCA fritos", "0% Grasas Trans")
  badge_text?: string; // Texto del badge si no es imagen
}

export interface Props {
  products: Product[];
  className?: string;
}

const {
  products = [],
  className = ''
} = Astro.props;

const currentLang = Astro.url.pathname.split('/')[1] === 'es' ? 'es' : 'en';

// Textos según idioma
const texts = {
  es: {
    title: 'Descubre nuestras líneas',
    viewAll: 'Ver todo'
  },
  en: {
    title: 'Discover our lines',
    viewAll: 'View all'
  }
};

const currentTexts = texts[currentLang as keyof typeof texts];
const productsItems = Array.isArray(products) ? products : [];

import LazyImage from '../LazyImage.astro';

// Colores de fondo para cada producto (puedes ajustar según tus necesidades)
const backgroundColors = [
  'from-green-400 to-green-500',
  'from-blue-500 to-blue-600',
  'from-orange-400 to-orange-500',
  'from-purple-400 to-purple-500',
];
---

<div class={`bg-[#FCDC85] py-12 px-4 md:px-8 lg:px-12 ${className}`}>
  <div class="max-w-7xl mx-auto">
    
    <!-- Header -->
    <div class="flex justify-between items-center mb-8 px-4">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-black text-gray-900">
        {currentTexts.title}
      </h2>
      <a 
        href={`/${currentLang}/${currentLang === 'es' ? 'productos' : 'products'}`}
        class="text-lg md:text-xl font-bold text-gray-900 hover:text-gray-700 transition-colors"
      >
        {currentTexts.viewAll}
      </a>
    </div>

    <!-- Grid de Productos -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-8">
      {productsItems.map((product, index) => (
        <a 
          href={`/${currentLang}/${currentLang === 'es' ? 'productos' : 'products'}/${product.id}`}
          class="product-card-link group"
        >
          <div 
            class="rounded-3xl overflow-visible shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:scale-[1.02] relative"
            style={`background: ${product.background_color || `linear-gradient(to bottom right, ${backgroundColors[index % backgroundColors.length]})`}`}
          >
            
            <!-- Contenedor de Imágenes con composición -->
            <div class="relative h-64 md:h-80 lg:h-96 flex items-center justify-center p-8 overflow-visible">
              
              <!-- Imagen 3 (Izquierda) - Si existe -->
              {product.imagethree && (
                <div class="absolute left-0 lg:left-[60px] top-1/2 -translate-y-1/2 w-2/5 h-3/4 z-10">
                  <LazyImage 
                    src={product.imagethree} 
                    alt={`${product.name} - variante`}
                    class="w-full h-full object-contain drop-shadow-2xl transform -rotate-12 transition-transform duration-300 group-hover:rotate-[-8deg]"
                  />
                </div>
              )}

              <!-- Imagen Principal (Centro) -->
              <div class="relative z-20 w-3/5 h-full">
                <LazyImage 
                  src={product.imageMobile || product.image} 
                  alt={product.name}
                  class="w-full h-full object-contain drop-shadow-2xl transition-transform duration-300 group-hover:scale-110"
                />
              </div>

              <!-- Imagen 2 (Derecha) - Si existe -->
              {product.imagetwo && (
                <div class="absolute right-0 lg:right-[50px] top-1/2 -translate-y-1/2 w-2/5 h-3/4 z-10">
                  <LazyImage 
                    src={product.imagetwo} 
                    alt={`${product.name} - variante`}
                    class="w-full h-full object-contain drop-shadow-2xl transform rotate-12 transition-transform duration-300 group-hover:rotate-[8deg]"
                  />
                </div>
              )}

              <!-- Badge/Icono del Producto (abajo a la derecha) -->
              {product.badge_icon && (
                <div class="absolute bottom-4 right-4 md:bottom-6 md:right-6 lg:bottom-8 lg:right-8 z-30">
                  <LazyImage 
                    src={product.badge_icon} 
                    alt="Badge"
                    class="w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 object-contain drop-shadow-lg"
                  />
                </div>
              )}

              <!-- Badge de Texto (si no hay imagen) -->
              {product.badge_text && !product.badge_icon && (
                <div class="absolute bottom-4 right-4 md:bottom-6 md:right-6 lg:bottom-8 lg:right-8 z-30 bg-white/90 backdrop-blur-sm rounded-full px-4 py-2 shadow-lg">
                  <p class="text-xs md:text-sm font-black text-gray-900 text-center leading-tight">
                    {product.badge_text}
                  </p>
                </div>
              )}

            </div>

          </div>
             <div class="bg-[#FCDC85] px-6 py-4 md:px-8 md:py-6">
              <h3 class="text-xl md:text-2xl lg:text-3xl font-black text-gray-900">
                {product.name}
              </h3>
          </div>
        </a>
      ))}
    </div>
    

    <!-- Si solo hay 1 producto, mostrar centrado -->
    {productsItems.length === 1 && (
      <style>
        .grid {
          justify-items: center;
        }
        .product-card-link {
          max-width: 600px;
          width: 100%;
        }
      </style>
    )}

  </div>
</div>

<style>
  .product-card-link {
    text-decoration: none;
    display: block;
  }

  .product-card-link:focus {
    outline: 2px solid #F86509;
    outline-offset: 4px;
    border-radius: 1.5rem;
  }

  /* Ajustes para que las imágenes laterales no se corten */
  .product-card-link > div {
    position: relative;
  }
</style>