---
// src/views/Products/Detail/index.astro
import { t } from '../../../i18n/i18n';
import type { Locale } from '../../../i18n/i18n';
import './styles.css';

// Interfaces locales
interface ProductSize {
  value: string;
  image: string;
}

interface Stockist {
  id: string;
  name: string;
  icon: string;
  link: string;
}

interface Product {
  id: string;
  name: string;
  image: string;
  available?: string;
  background_image: string;
  background_color: string;
  header_text_color: string;
  color_button: string;
  sizes: ProductSize[];
  description?: string;
  short_description?: string;
  presentaciones?: Array<{
    value: string;
    icono: string;
  }>;
  relatedProducts?: string[];
  weight?: string[];
  nutrition?: any;
}

const { currentLang, productId } = Astro.props;

// Obtener datos desde traducciones
const productsAssets = t('home', { namespace: 'products', locale: currentLang }) || {};
const products = t('items', { namespace: 'products', locale: currentLang as Locale }) || [];
const stockists = t('stockist', { namespace: 'products', locale: currentLang as Locale }) || [];
const product = products.find((item: Product) => item.id === productId);
const brandsAssets = t('', { namespace: 'brands', locale: currentLang }) || {};
const newsAssets = t('', { namespace: 'news', locale: currentLang }) || {};
const brandsList = brandsAssets.brands || [];
const zibasBrand = brandsList.find((brand: any) => brand.id === 'ranchitas');
const cardQuizAssets = t('cardQuiz', { namespace: 'common', locale: currentLang }) || {};
const zibasProducts = (zibasBrand?.products || []).filter((product: any) => product.id !== productId);

// Si el producto no existe, lanzar error
if (!product || Object.keys(product).length === 0) {
  throw new Error(t('errors.product_not_found', { locale: currentLang }));
}

// Asegurar que todas las propiedades necesarias existan
const safeProduct: Product = {
  id: product.id || '',
  name: product.name || '',
  image: product.image || '',
  background_image: product.background_color || '',
  background_color: product.background_color || '#0D75C9',
  header_text_color: product.header_text_color || '#FFFFFF',
  color_button: product.color_button || '#FFFFFF',
  sizes: Array.isArray(product.sizes) ? product.sizes : [],
  available: product.available || '',
  description: product.description || '',
  short_description: product.short_description || '',
  weight: Array.isArray(product.weight) ? product.weight : [],
  nutrition: product.nutrition,
};

// Verificar si el producto tiene información nutricional
const hasNutrition = safeProduct.nutrition && 
  (Array.isArray(safeProduct.nutrition) ? safeProduct.nutrition.length > 0 : Object.keys(safeProduct.nutrition).length > 0);

// Obtener todos los productos como un array
const productsData = t('items', { locale: currentLang, namespace: 'products' }) || [];
const allProductsArray = Array.isArray(productsData) ? productsData : [];

// Filtrar productos relacionados
let relatedProducts: any[] = [];
if (allProductsArray.length > 1) {
  relatedProducts = allProductsArray
    .filter((p: any) => p.id !== productId)
    .slice(0, 6);
}

// Redes sociales
const socialMedia = [
  { name: 'Instagram', icon: 'instagram', url: 'https://instagram.com/yummipops' },
  { name: 'Facebook', icon: 'facebook', url: 'https://facebook.com/yummipops' },
  { name: 'TikTok', icon: 'tiktok', url: 'https://tiktok.com/@yummipops' },
  { name: 'YouTube', icon: 'youtube', url: 'https://youtube.com/@yummipops' }
];
---

<article
  id="product-detail"
  class="product-detail pt-8 md:pt-12 pb-16 bg-white"
  transition:animate="slide"
>
  <!-- Hero Section -->
  <div class=" mx-auto px-4 md:px-6 mb-16">
    <div 
      class="rounded-[30px] md:rounded-[40px] overflow-hidden"
      style={{ backgroundColor: '#0D75C9' }}
    >
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 p-6 md:p-12 lg:p-16">
        
        <!-- Lado Izquierdo - Imagen del Producto -->
        <div class="flex items-center justify-center">
          <img 
            id="product-image"
            src={safeProduct.image} 
            alt={safeProduct.name}
            class="w-full max-w-[450px] h-auto object-contain drop-shadow-2xl"
            transition:name={`product-image-${safeProduct.id}`}
          />
        </div>

        <!-- Lado Derecho - Información -->
        <div class="flex flex-col justify-center space-y-6">
          
          <!-- Título del Producto -->
          <h1 
            class="text-4xl md:text-5xl lg:text-6xl font-black leading-tight"
            style={{ color: safeProduct.header_text_color }}
          >
            {safeProduct.name}
          </h1>

          <!-- Subtítulo/Descripción -->
          {safeProduct.short_description && (
            <p 
              class="text-lg md:text-xl"
              style={{ color: safeProduct.header_text_color }}
            >
              {safeProduct.short_description}
            </p>
          )}

          <!-- Tamaños Disponibles -->
          {safeProduct.weight && safeProduct.weight.length > 0 && (
            <div class="space-y-4">
              <h3 
                class="text-xl md:text-2xl font-bold"
                style={{ color: safeProduct.header_text_color }}
              >
                {currentLang === 'es' ? 'Disfruta de nuestras presentaciones' : 'Enjoy our presentations'}
              </h3>
              
              <div class="flex flex-wrap gap-3">
                {safeProduct.weight.map((weight, index) => (
                  <button 
                    class="weight-option px-6 py-3 rounded-full border-2 font-bold text-base md:text-lg transition-all duration-300 hover:scale-105"
                    style={{ 
                      borderColor: safeProduct.header_text_color,
                      color: safeProduct.header_text_color,
                      backgroundColor: 'transparent'
                    }}
                    data-weight={weight}
                    data-index={index}
                  >
                    {weight}
                  </button>
                ))}
              </div>

              <p 
                class="text-sm italic"
                style={{ color: safeProduct.header_text_color }}
              >
                {currentLang === 'es' 
                  ? 'Tamaño por presentación varía de acuerdo al país' 
                  : 'Size per presentation varies by country'}
              </p>
            </div>
          )}

          <!-- Detalle de Nutrición (Acordeón) -->
          {hasNutrition && (
            <div class="border-t border-b py-4" style={{ borderColor: `${safeProduct.header_text_color}40` }}>
              <button 
                id="nutrition-toggle"
                class="w-full flex items-center justify-between text-xl md:text-2xl font-bold transition-colors"
                style={{ color: safeProduct.header_text_color }}
              >
                <span>{currentLang === 'es' ? 'Detalle de nutrición' : 'Nutrition details'}</span>
                <svg 
                  id="nutrition-icon"
                  class="w-6 h-6 transition-transform duration-300" 
                  fill="none" 
                  stroke="currentColor" 
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
              </button>
              
              <div id="nutrition-content" class="hidden mt-4 space-y-2">
                <!-- Aquí va la tabla nutricional -->
                <div class="bg-white/20 rounded-xl p-4 backdrop-blur-sm">
                  <p class="text-white">
                    {currentLang === 'es' ? 'Información nutricional disponible' : 'Nutritional information available'}
                  </p>
                </div>
              </div>
            </div>
          )}

          <!-- Redes Sociales -->
          <div class="space-y-3">
            <h4 
              class="text-lg font-bold"
              style={{ color: safeProduct.header_text_color }}
            >
              {currentLang === 'es' ? 'Síguenos en nuestras redes sociales' : 'Follow us on social media'}
            </h4>
            
            <div class="flex gap-4">
              {socialMedia.map((social) => (
                <a
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-10 h-10 rounded-full bg-white/90 hover:bg-white flex items-center justify-center transition-all hover:scale-110"
                  aria-label={social.name}
                >
                  {social.icon === 'instagram' && (
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                    </svg>
                  )}
                  {social.icon === 'facebook' && (
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                    </svg>
                  )}
                  {social.icon === 'tiktok' && (
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
                    </svg>
                  )}
                  {social.icon === 'youtube' && (
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                    </svg>
                  )}
                </a>
              ))}
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <!-- Productos Similares -->
  <section class="container mx-auto px-4 md:px-6">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-black text-gray-900">
        {currentLang === 'es' ? 'Productos similares' : 'Similar products'}
      </h2>
      <a 
        href={`/${currentLang}/productos`}
        class="hidden md:flex items-center gap-2 bg-blue-600 text-white px-6 py-3 rounded-full font-bold hover:bg-blue-700 transition-colors"
      >
        {currentLang === 'es' ? 'Ver todo' : 'See all'}
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    </div>

    {relatedProducts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 ">
        {relatedProducts.slice(0, 3).map((product: any) => (
          <div class="flex flex-col">
            <a 
            href={`/${currentLang}/productos/${product.id}`}
            class="group rounded-[30px] overflow-hidden transition-all duration-300 hover:shadow-2xl transform hover:scale-[1.02]"
            style={{ backgroundColor: product.background_color }}
          >
            <!-- Imagen del producto -->
            <div class="flex items-center justify-center p-8 h-[300px]">
              <img 
                src={product.image} 
                alt={product.name}
                class="w-full max-w-[250px] h-full object-contain drop-shadow-lg group-hover:scale-105 transition-transform duration-300"
              />
            </div>
          </a>
            <h3 class="text-xl md:text-2xl font-black text-gray-900 mt-4 leading-tight">
              {product.name}
            </h3>
          </div>
           
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-xl text-gray-600">
          {currentLang === 'es' ? 'No hay productos similares disponibles' : 'No similar products available'}
        </p>
      </div>
    )}

    <!-- Ver todo button (mobile) -->
    <div class="mt-8 flex justify-center md:hidden">
      <a 
        href={`/${currentLang}/productos`}
        class="flex items-center gap-2 bg-blue-600 text-white px-8 py-4 rounded-full font-bold hover:bg-blue-700 transition-colors text-lg"
      >
        {currentLang === 'es' ? 'Ver todo' : 'See all'}
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </section>

</article>

<script>
  import { initProductDetail } from './scripts.js';
  
  document.addEventListener('astro:page-load', () => {
    // Inicializar producto
    initProductDetail();
    
    // Weight options - selección de tamaños
    const weightOptions = document.querySelectorAll<HTMLButtonElement>('.weight-option');
    weightOptions.forEach((option, index) => {
      option.addEventListener('click', () => {
        weightOptions.forEach(opt => {
          opt.style.backgroundColor = 'transparent';
          opt.style.fontWeight = 'bold';
        });
        option.style.backgroundColor = 'black';
        option.style.color = option.style.borderColor || '#000';
      });
    });
    
    // Seleccionar primer tamaño por defecto
    if (weightOptions.length > 0) {
      weightOptions[0].click();
    }

    // Toggle de información nutricional
    const nutritionToggle = document.getElementById('nutrition-toggle');
    const nutritionContent = document.getElementById('nutrition-content');
    const nutritionIcon = document.getElementById('nutrition-icon');

    if (nutritionToggle && nutritionContent && nutritionIcon) {
      nutritionToggle.addEventListener('click', () => {
        const isHidden = nutritionContent.classList.contains('hidden');
        
        if (isHidden) {
          nutritionContent.classList.remove('hidden');
          nutritionIcon.style.transform = 'rotate(45deg)';
        } else {
          nutritionContent.classList.add('hidden');
          nutritionIcon.style.transform = 'rotate(0deg)';
        }
      });
    }
  });
</script>

<script is:inline>
  (function () {
    function initWhereToBuyModal() {
      const openBtn = document.getElementById('where-to-buy-open');
      const modal = document.getElementById('where-to-buy-modal');
      if (!(openBtn instanceof HTMLButtonElement)) return;
      if (!(modal instanceof HTMLElement)) return;

      if (modal.dataset.wtbInit === '1') return;
      modal.dataset.wtbInit = '1';

      const closeBtn = modal.querySelector('[data-wtb-close]');
      const backdrop = modal.querySelector('[data-wtb-backdrop]');

      const open = () => {
        modal.classList.remove('hidden');
        modal.setAttribute('aria-hidden', 'false');
        document.body.style.overflow = 'hidden';
      };

      const close = () => {
        modal.classList.add('hidden');
        modal.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = '';
      };

      openBtn.addEventListener('click', open);

      if (closeBtn) closeBtn.addEventListener('click', close);
      if (backdrop) backdrop.addEventListener('click', close);

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') close();
      });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initWhereToBuyModal);
    } else {
      initWhereToBuyModal();
    }

    document.addEventListener('astro:page-load', initWhereToBuyModal);
  })();
</script>