---
// src/views/Recipes/Detail/index.astro
import './styles.css';
import LazyImage from '../../../components/common/LazyImage.astro';
import RecipeCard from '../../../components/recipes/RecipeCard.astro';
import { t, getLocale } from '../../../i18n/i18n';

interface RecipeItem {
  id: string;
  title: string;
  description: string;
  ingredients: string[];
  instructions: string[];
  preparation_time: number;
  servings: number;
  difficulty?: string;
  category?: string;
  image?: string;
  tags?: string[];
  product?: string | string[];
  chef_tips?: string[];
}

const { currentLang, recipeId } = Astro.props;

// Import all recipe files
const recipeModules = import.meta.glob<{ default: RecipeItem }>("../../../locales/*/recipes/*.json");
const allRecipes: RecipeItem[] = [];
for (const path in recipeModules) {
  const lang = path.split('/')[4];
  if (lang === currentLang) {
    const mod = await recipeModules[path]();
    allRecipes.push(mod.default);
  }
}

// Find current recipe
const recipe = allRecipes.find((item: RecipeItem) => item.id === recipeId);

// Get related recipes
const relatedRecipes = allRecipes
  .filter((item: RecipeItem) => item.id !== recipeId)
  .slice(0, 3);

if (!recipe) {
  throw new Error(`Recipe with id ${recipeId} not found`);
}

// Load products using t() function
const products = t('items', { namespace: 'products', locale: currentLang }) || [];

// Textos
const backText = currentLang === 'es' ? 'Volver a recetas' : 'Back to recipes';
const shareText = currentLang === 'es' ? 'Compartir' : 'Share';
const copyLinkText = currentLang === 'es' ? 'Copiar link' : 'Copy link';
const ingredientsTitle = currentLang === 'es' ? 'Ingredientes' : 'Ingredients';
const preparationTitle = currentLang === 'es' ? 'Preparación' : 'Preparation';
const recommendedProductTitle = currentLang === 'es' ? 'Producto recomendado' : 'Recommended product';
const viewProductButton = currentLang === 'es' ? 'Ver producto' : 'View product';
const chefTipsTitle = currentLang === 'es' ? 'Tips del Chef' : 'Chef Tips';
const similarRecipesTitle = currentLang === 'es' ? 'Recetas similares' : 'Similar recipes';
const viewAllButton = currentLang === 'es' ? 'Ver todo' : 'See all';
const perfectIngredientText = currentLang === 'es' ? 'El ingrediente perfecto para esta receta' : 'The perfect ingredient for this recipe';

function formatTime(minutes: number): string {
  const hours = Math.floor(minutes / 60);
  const mins = minutes % 60;
  
  if (currentLang === 'es') {
    return hours > 0 ? `${hours}h ${mins}min` : `${mins} min`;
  } else {
    return hours > 0 ? `${hours}h ${mins}m` : `${mins} min`;
  }
}

// Get product info
const productSlug = Array.isArray(recipe.product) ? recipe.product[0] : recipe.product;

// Find product data from products array
const productData = products.find((item: any) => item.id === productSlug) || null;

// Chef tips (si no existen en recipe, usar valores por defecto)
const chefTips = recipe.chef_tips || [
  currentLang === 'es' ? 'Usa Yummi Pops para un toque extra crujiente' : 'Use Yummi Pops for an extra crunchy touch',
  currentLang === 'es' ? 'Tamiza bien la harina para evitar grumos' : 'Sift the flour well to avoid lumps',
  currentLang === 'es' ? 'No sobre mezcles para mantener la textura' : 'Don\'t overmix to maintain texture'
];
---

<div class="bg-white min-h-screen">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Back Button -->
    <div class="mb-6">
      <a 
        href={`/${currentLang}/${currentLang === 'es' ? 'recetas' : 'recipes'}`} 
        class="inline-flex items-center gap-2 text-gray-700 hover:text-gray-900 transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        <span class="font-medium">{backText}</span>
      </a>
    </div>

    <!-- Header Section -->
    <div class="mb-8">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-black text-gray-900 mb-6">
        {recipe.title}
      </h1>

      <!-- Info Pills -->
      <div class="flex flex-wrap items-center gap-4 mb-6">
        <!-- Time -->
        <div class="flex items-center gap-2 text-gray-700">
          <svg class="w-5 h-5 text-[#F9A825]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="font-medium">{formatTime(recipe.preparation_time)}</span>
        </div>

        <!-- Servings -->
        <div class="flex items-center gap-2 text-gray-700">
          <svg class="w-5 h-5 text-[#F9A825]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <span class="font-medium">{recipe.servings} {currentLang === 'es' ? 'porciones' : 'servings'}</span>
        </div>

        <!-- Difficulty -->
        <div class="flex items-center gap-2 text-gray-700">
          <svg class="w-5 h-5 text-[#F9A825]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          <span class="font-medium">{recipe.difficulty || (currentLang === 'es' ? 'Fácil' : 'Easy')}</span>
        </div>
      </div>

      <!-- Share Buttons -->
      <div class="flex gap-3">
        <button 
          id="shareButton"
          class="flex items-center gap-2 px-4 py-2 bg-gray-100 rounded-full hover:bg-gray-200 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
          </svg>
          <span class="font-medium">{shareText}</span>
        </button>

        <button 
          id="copyLinkButton"
          class="flex items-center gap-2 px-4 py-2 bg-gray-100 rounded-full hover:bg-gray-200 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
          </svg>
          <span class="font-medium">{copyLinkText}</span>
        </button>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-16">
      
      <!-- Left Column (2/3) -->
      <div class="lg:col-span-2 space-y-8">
        
        <!-- Recipe Image -->
        {recipe.image && (
          <div class="relative rounded-3xl overflow-hidden aspect-video">
            <LazyImage
              src={recipe.image} 
              alt={recipe.title}
              class="w-full h-full object-cover"
              transition:name={`recipe-image-${recipe.id}`}
            />
          </div>
        )}

        <!-- Ingredientes Section -->
        <div class="border-l-4 border-[#F9A825] pl-6">
          <h2 class="text-3xl font-black text-gray-900 mb-6">
            {ingredientsTitle}
          </h2>
          <ul class="space-y-3">
            {recipe.ingredients.map((ingredient: string) => (
              <li class="flex items-start gap-3 text-gray-700">
                <span class="w-1.5 h-1.5 rounded-full bg-gray-400 mt-2 flex-shrink-0"></span>
                <span class="text-base">{ingredient}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- Preparación Section -->
        <div class="border-l-4 border-[#F9A825] pl-6">
          <h2 class="text-3xl font-black text-gray-900 mb-6">
            {preparationTitle}
          </h2>
          <div class="space-y-6">
            {recipe.instructions.map((instruction: string, index: number) => (
              <div class="flex gap-4">
                <div class="flex-shrink-0">
                  <div class="w-10 h-10 rounded-full bg-[#F9A825] text-white font-bold flex items-center justify-center">
                    {index + 1}
                  </div>
                </div>
                <div class="flex-1 pt-2">
                  <p class="text-gray-700 text-base leading-relaxed">{instruction}</p>
                </div>
              </div>
            ))}
          </div>
        </div>

      </div>

      <!-- Right Column (1/3) -->
      <div class="space-y-6">
        
        <!-- Producto Recomendado Card -->
        {productData && (
          <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-3xl p-6 text-white">
            <div class="text-start mb-4">
              <span class="inline-block bg-white/20 px-4 py-1 rounded-full text-sm font-semibold">
                {recommendedProductTitle}
              </span>
            </div>

            <div class="rounded-2xl p-6 mb-4">
              <img 
                src={productData.image} 
                alt={productData.name}
                class="w-full h-48 object-contain"
              />
            </div>

            <h3 class="text-xl font-bold mb-2 text-center">
              {productData.name}
            </h3>
            
            <p class="text-sm text-center mb-4 opacity-90">
              {perfectIngredientText}
            </p>

            <a 
              href={`/${currentLang}/productos/${productData.id}`}
              class="block w-full bg-white text-blue-600 text-center font-bold py-3 rounded-[10px] hover:bg-gray-100 transition-colors"
            >
              {viewProductButton}
            </a>
          </div>
        )}

        <!-- Tips del Chef Card -->
        <div class="bg-[#FFF9E6] rounded-3xl p-6">
          <div class="flex items-center gap-3 mb-4">
            <svg class="w-8 h-8 text-[#F9A825]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
            <h3 class="text-2xl font-black text-gray-900">
              {chefTipsTitle}
            </h3>
          </div>

          <ul class="space-y-3">
            {chefTips.map((tip: string) => (
              <li class="flex items-start gap-3 text-gray-700">
                <svg class="w-5 h-5 text-[#F9A825] flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span class="text-sm leading-relaxed">{tip}</span>
              </li>
            ))}
          </ul>
        </div>

      </div>
    </div>

    <!-- Recetas Similares Section -->
    {relatedRecipes.length > 0 && (
      <section>
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-3xl md:text-4xl font-black text-gray-900">
            {similarRecipesTitle}
          </h2>
          <a 
            href={`/${currentLang}/${currentLang === 'es' ? 'recetas' : 'recipes'}`}
            class="bg-blue-600 text-white px-6 py-3 rounded-full font-bold hover:bg-blue-700 transition-colors"
          >
            {viewAllButton}
          </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {relatedRecipes.map((relatedRecipe: RecipeItem) => (
            <RecipeCard
              image={relatedRecipe.image || '/images/recipes/placeholder.jpg'}
              title={relatedRecipe.title}
              time={`${relatedRecipe.preparation_time}MIN`}
              id={relatedRecipe.id}
              difficulty={relatedRecipe.difficulty || (currentLang === 'es' ? 'Fácil' : 'Easy')}
              product={Array.isArray(relatedRecipe.product) ? relatedRecipe.product[0] : relatedRecipe.product}
            />
          ))}
        </div>
      </section>
    )}

  </div>
</div>

<script>
  // Share functionality
  document.getElementById('shareButton')?.addEventListener('click', async () => {
    if (navigator.share) {
      try {
        await navigator.share({
          title: document.title,
          url: window.location.href
        });
      } catch (err) {
        console.log('Error sharing:', err);
      }
    } else {
      alert('Share not supported on this browser');
    }
  });

  // Copy link functionality
  document.getElementById('copyLinkButton')?.addEventListener('click', async () => {
    try {
      await navigator.clipboard.writeText(window.location.href);
      const button = document.getElementById('copyLinkButton');
      const originalText = button?.innerHTML;
      if (button) {
        button.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg><span class="font-medium">¡Copiado!</span>';
        setTimeout(() => {
          button.innerHTML = originalText || '';
        }, 2000);
      }
    } catch (err) {
      console.error('Failed to copy:', err);
    }
  });
</script>