---
import MainLayout from '../layouts/MainLayout.astro';
import { getLocale } from '../i18n/i18n';

const currentLang = getLocale();

const content = {
  es: {
    title: '404 - Página no encontrada',
    heading: '¡Ups! Esta página se perdió',
    subheading: 'como una Ranchita en el sofá',
    description: 'Parece que la página que buscas no existe o fue movida. Pero no te preocupes, ¡tenemos muchas otras cosas crujientes para ti!',
    homeButton: 'Volver al inicio',
    recipesButton: 'Ver recetas',
    productsButton: 'Ver productos',
    errorCode: 'Error 404'
  },
  en: {
    title: '404 - Page not found',
    heading: 'Oops! This page got lost',
    subheading: 'like a Ranchita on the couch',
    description: "It seems the page you're looking for doesn't exist or was moved. But don't worry, we have many other crunchy things for you!",
    homeButton: 'Back to home',
    recipesButton: 'View recipes',
    productsButton: 'View products',
    errorCode: 'Error 404'
  }
};

const text = content[currentLang as 'es' | 'en'] || content.es;
---

<MainLayout title={text.title} description={text.description}>
  <div class="min-h-screen bg-primaryCream flex items-center justify-center px-4 py-16">
    <div class="max-w-4xl mx-auto text-center">
      
      <!-- Error Code -->
      <div class="mb-8">
        <span class="inline-block text-[#F04F00] font-black text-8xl md:text-9xl opacity-20">
          404
        </span>
      </div>

      <!-- Main Content -->
      <div class="mb-12">
        <h1 class="text-4xl md:text-6xl font-black text-black mb-4 leading-tight">
          {text.heading}
        </h1>
        <p class="text-2xl md:text-3xl font-bold text-[#F04F00] mb-6 italic">
          {text.subheading}
        </p>
        <p class="text-lg md:text-xl text-gray-700 max-w-2xl mx-auto leading-relaxed">
          {text.description}
        </p>
      </div>

      <!-- Ranchitas Image -->
      <div class="mb-12 flex justify-center">
        <img 
          src="https://snack.yummiespromociones.com/SnacksyummiesAssets/ranchitas-nacho-exitante-2.webp" 
          alt="Ranchitas" 
          class="w-64 md:w-80 object-contain animate-bounce-slow"
        />
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href={`/${currentLang}`}
          class="inline-flex items-center gap-2 bg-[#F04F00] text-white font-bold px-8 py-4 rounded-full hover:bg-[#d54500] transition-all hover:shadow-lg transform hover:-translate-y-1"
        >
          {text.homeButton}
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
        </a>
        
        <a 
          href={`/${currentLang}/${currentLang === 'es' ? 'recetas' : 'recipes'}`}
          class="inline-flex items-center gap-2 bg-[#F04F00] text-white font-bold px-8 py-4 rounded-full hover:bg-[#d54500] font-bold px-8 py-4 rounded-full  transition-all"
        >
          {text.recipesButton}
        </a>
        
        <a 
          href={`/${currentLang}/${currentLang === 'es' ? 'productos' : 'products'}`}
          class="inline-flex items-center gap-2 bg-[#F04F00] text-white font-bold px-8 py-4 rounded-full hover:bg-[#d54500] font-bold px-8 py-4 rounded-full transition-all"
        >
          {text.productsButton}
        </a>
      </div>

    </div>
  </div>
</MainLayout>

<style>
  @keyframes bounce-slow {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20px);
    }
  }
  
  .animate-bounce-slow {
    animation: bounce-slow 3s ease-in-out infinite;
  }
</style>
